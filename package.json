{
  "name": "hummingbird",
  "version": "6.0.4",
  "description": "Support the Drop folder compression.",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leibnizli/hummingbird.git"
  },
  "author": "leibnizli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leibnizli/hummingbird/issues"
  },
  "homepage": "https://github.com/leibnizli/hummingbird#readme",
  "build": {
    "appId": "dev.arayofsunshine.hummingbird",
    "mac": {
      "notarize": false,
      "category": "tool",
      "target": {
        "target": "default",
        "arch": [
          "arm64"
        ]
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asar": false,
    "files": [
      "main.js",
      "configuration.js",
      "locales",
      "public",
      "src/util.js",
      "src/images/icon.png"
    ]
  },
  "scripts": {
    "esbuild": "rimraf ./assets &&  node esbuild.config.mjs",
    "dev": "electron .",
    "dir": "rimraf ./dist && electron-builder --dir",
    "pack": "rimraf ./dist && electron-builder build --mac --publish never"
  },
  "devDependencies": {
    "@electron/notarize": "2.3.0",
    "@types/node": "^20.0.0",
    "@types/sharp": "^0.30.x",
    "cross-env": "^7.0.3",
    "electron": "^31.0.0",
    "electron-builder": "24.13.3",
    "esbuild": "0.19.11",
    "gulp": "^4.0.0",
    "gulp-clean-css": "^3.4.1",
    "gulp-htmlmin": "^3.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^3.0.0",
    "typescript": "^4.x"
  },
  "dependencies": {
    "express": "^4.19.2",
    "electron-log": "^5.1.2",
    "electron-updater": "^6.1.7",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "heic-convert": "^2.1.0",
    "i18n": "^0.15.1",
    "imagemin": "^5.3.1",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-optipng": "^5.2.1",
    "imagemin-pngquant": "9.0.2",
    "imagemin-svgo": "^7.0.0",
    "imagemin-webp": "^5.0.0",
    "mime": "^3.0.0",
    "nconf": "0.11.4",
    "sharp": "^0.33.2",
    "to-ico": "^1.1.5",
    "wavesurfer.js": "^7.7.10"
  }
}
