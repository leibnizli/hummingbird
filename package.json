{
  "name": "hummingbird",
  "version": "4.2.0",
  "description": "Support the drag and drop folder compression.",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leibnizli/hummingbird.git"
  },
  "author": "leibnizli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leibnizli/hummingbird/issues"
  },
  "homepage": "https://github.com/leibnizli/hummingbird#readme",
  "build": {
    "appId": "dev.arayofsunshine.hummingbird",
    "mac": {
      "category": "tool",
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "asar": false
  },
  "scripts": {
    "build": "rm -rf ./assets &&  node esbuild.config.mjs",
    "dev": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "dir": "rm -rf ./dist && electron-builder --dir",
    "pack": "rm -rf ./dist && electron-builder",
    "clean": "rm -rf ./dist"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "17.1.2",
    "electron-squirrel-startup": "^1.0.0",
    "esbuild": "0.19.11"
  },
  "dependencies": {
    "gulp": "^4.0.0",
    "gulp-clean-css": "^3.4.1",
    "gulp-htmlmin": "^3.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^3.0.0",
    "imagemin": "^5.3.1",
    "imagemin-gifsicle": "^6.0.1",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-optipng": "^5.2.1",
    "imagemin-pngquant": "^5.0.1",
    "imagemin-svgo": "^7.0.0",
    "imagemin-webp": "^5.0.0",
    "mime": "^3.0.0",
    "nconf": "0.11.4",
    "update-electron-app": "^3.0.0"
  }
}
