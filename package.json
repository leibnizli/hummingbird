{
  "name": "hummingbird",
  "version": "3.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "webpack --watch",
    "dev": "electron ./app",
    "clean": "rm -rf ./dist",
    "clean:osx": "rm -rf ./dist/osx",
    "clean:win": "rm -rf ./dist/win",
    "build": "npm run clean && npm run build:osx && npm run build:win",
    "build:osx": "npm run clean:osx && electron-packager ./app \"Hummingbird\" --out=dist/osx --platform=darwin --arch=x64 --icon=assets/osx/icon.icns",
    "build:win": "npm run clean:win && electron-packager ./app \"Hummingbird\" --out=dist/win --platform=win32 --arch=ia32 --icon=assets/win/icon.ico",
    "pack": "npm run pack:osx && npm run pack:win",
    "pack:osx": "appdmg ./appdmg.json ./Hummingbird.dmg",
    "pack:win": "electron-builder \"dist/win/Hummingbird-win32\" --platform=win --out=\"dist/win\" --config=packager.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leibnizli/hummingbird.git"
  },
  "author": "leibnizli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leibnizli/hummingbird/issues"
  },
  "homepage": "https://github.com/leibnizli/hummingbird#readme",
  "devDependencies": {
    "electron": "^4.0.1",
    "electron-packager": "13.0.1",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "babel-loader": "^8.0.5",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  }
}
